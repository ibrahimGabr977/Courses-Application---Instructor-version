<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ElQalamTeacher" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white_color</item>
        <item name="colorPrimaryVariant">@color/white_color</item>
        <item name="colorOnPrimary">@color/black_color</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!--changing nav drawer separator color-->
        <item name="android:listDivider">@color/list_divider_color</item>
        <!--changing nav drawer sub category title color-->
        <item name="android:textColorSecondary">@color/gray_color</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>



    <style name="CustomNavTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">casual</item>
        <item name="android:letterSpacing">0.17</item>
        <item name="android:textSize">13sp</item>
    </style>


</resources>